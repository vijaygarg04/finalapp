<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/buttondesign"
    tools:context="com.example.shivam.attendanceappminor.FacultyDashboardActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="280dp"
            android:orientation="vertical">
    <Button
        android:layout_marginTop="10dp"
        android:minHeight="60dp"
        android:background="@android:color/holo_green_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/add_batch_button"
    android:text="add batch"/>
<Button
    android:layout_marginTop="10dp"
    android:minHeight="60dp"
    android:background="@android:color/holo_green_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Mark ATtendance"
    android:id="@+id/mark_attendance_button"/>
<Button
    android:layout_marginTop="10dp"
    android:minHeight="60dp"
    android:background="@android:color/holo_green_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Conduct Quiz"
    android:id="@+id/conduct_quiz_button"/>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/logout"
                android:text="logout"
                android:background="@android:color/holo_red_dark"
                />
</LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
