<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/buttondesign"
    android:gravity="center"
    tools:context="com.example.shivam.attendanceappminor.StudentDashboardActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            android:orientation="vertical"
            android:layout_margin="15dp"

            tools:context="com.example.shivam.attendanceappminor.AdminDashboardActivity">

            <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/check_attendance"
        android:text="Check Attendance"/>
    <Button
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_dark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/take_quiz"
        android:text="Take Quiz"/>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/logout"
                android:text="logout"
                android:background="@android:color/holo_red_dark"
                />
</LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>