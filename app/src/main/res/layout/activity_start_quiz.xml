<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartQuiz"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/buttondesign">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@android:color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="450dp"
            android:orientation="vertical"
            android:layout_margin="15dp"
            tools:context="com.example.shivam.attendanceappminor.AdminDashboardActivity">

        <com.example.shivam.attendanceappminor.CountDownTimerView
                android:gravity="right"
                android:textSize="30sp"
                android:id="@+id/short_timer_view"

                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.8"
            android:background="@drawable/edittextdesign"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            />
            <TextView
                android:background="@drawable/edittextdesign"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Question"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/tvquestion"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/edittextdesign"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:padding="5dp"
                android:minHeight="40dp"
                android:text="Option"
                android:id="@+id/option1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/edittextdesign"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:minHeight="40dp"
                android:textSize="18sp"
                android:text="Option"
                android:id="@+id/option2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/edittextdesign"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:minHeight="40dp"
                android:textSize="18sp"
                android:text="Option"
                android:id="@+id/option3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/edittextdesign"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:minHeight="40dp"
                android:text="Option"
                android:textSize="18sp"
                android:id="@+id/option4"/>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnsubmitanswer"
                android:text="Submit Answer"
                android:background="@android:color/holo_green_dark"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>